# vim: ft=yaml
---
sourceDir: ~/meincodex/codebasis/github.com/neumachen/dotfiles
diff:
  command: nvim
  args:
    - -d
    - "{{`{{ .Destination }}`}}"
    - "{{`{{ .Target }}`}}"
merge:
  command: nvim
  args:
    - -d
    - "{{`{{ .Destination }}`}}"
    - "{{`{{ .Source }}"
    - "{{ .Target }}`}}"
data:
  git:
    profile: |
      [user]
        email = kareem@hepburn.info
        name = Kareem Hepburn
        signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIFoyAAGM4r9Lkj2rsjZbXE2f3TfW63Y7GXsURireuGvb
      [gpg]
        format = ssh
      [gpg "ssh"]
        program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
      [commit]
        gpgsign = true

  envvars: []
